{
  "compilerOptions": {
    "outDir": "./mock-server-site/static",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./client/**/*.ts",
    "./client/**/*.tsx",
    "./client/**/*.js",
    "./server/**/*.ts",
    "./server/**/*.tsx",
    "./server/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
